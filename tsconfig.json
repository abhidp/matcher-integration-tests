{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "resolveJsonModule": true
    // "types": ["mocha", "node", "chai", "chai-json-schema", "dotenv"]
  },
  "include": ["data/**/*", "util/**/*", "config/**/*", "tests/**/*"],
  "exclude": ["./dist/*"]
}
